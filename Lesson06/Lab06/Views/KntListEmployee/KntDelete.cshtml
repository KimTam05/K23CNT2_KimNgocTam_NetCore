@model Lab06.Models.KntEmployee
@{
    ViewData["Title"] = "Xóa nhân viên";
}

<h3>Bạn có chắc chắn muốn xóa nhân viên này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Họ tên</dt>
        <dd class="col-sm-10">@Model.KntName</dd>

        <dt class="col-sm-2">Ngày sinh</dt>
        <dd class="col-sm-10">@Model.KntBirthday.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.KntEmail</dd>

        <dt class="col-sm-2">Điện thoại</dt>
        <dd class="col-sm-10">@Model.KntPhone</dd>

        <dt class="col-sm-2">Lương</dt>
        <dd class="col-sm-10">@Model.KntSalary.ToString("N0") ₫</dd>
    </dl>
</div>

<form asp-action="KntDelete" method="post">
    <input type="hidden" asp-for="KntId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="KntIndex" class="btn btn-secondary">Hủy</a>
</form>
