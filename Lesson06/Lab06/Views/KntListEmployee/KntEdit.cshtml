@model Lab06.Models.KntEmployee
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<h3>Chỉnh sửa nhân viên</h3>

<form asp-action="KntEdit" method="post" class="form-horizontal">
    
    <input type="hidden" asp-for="KntId"/>

    <div class="form-group">
        <label asp-for="KntName" class="control-label"></label>
        <input asp-for="KntName" class="form-control" />
        <span asp-validation-for="KntName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KntPhone" class="control-label"></label>
        <input asp-for="KntPhone" class="form-control" />
        <span asp-validation-for="KntPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KntSalary" class="control-label"></label>
        <input asp-for="KntSalary" class="form-control" />
        <span asp-validation-for="KntSalary" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="KntIsActive" class="form-check-input" />
        <label asp-for="KntIsActive" class="form-check-label">Hoạt động?</label>
        <span asp-validation-for="KntIsActive" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="KntIndex" class="btn btn-secondary">Hủy</a>
</form>
