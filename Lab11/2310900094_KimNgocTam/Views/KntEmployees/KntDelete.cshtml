@model _2310900094_KimNgocTam.Models.KntEmployee

@{
    ViewData["Title"] = "Delete Employee Information";
    
}

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KntEmpName)
        </dd>
        <dt class = "col-sm-2">
            Level:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KntEmpLevel)
        </dd>
        <dt class = "col-sm-2">
            Start Date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KntEmpStartDate)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KntEmpStatus)
