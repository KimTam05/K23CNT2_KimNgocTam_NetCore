@model _2310900094_KimNgocTam.Models.KntEmployee

@{
    ViewData["Title"] = "Employee Details";
}

<div>
    <h4>Detail of @Html.DisplayFor(model => model.KntEmpName)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KntEmpName)
        </dd>
        <dt class = "col-sm-2">
            Level:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KntEmpLevel)
        </dd>
        <dt class = "col-sm-2">
            Start Date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KntEmpStartDate)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KntEmpStatus)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="KntEdit" asp-route-id="@Model?.KntEmpId" class="btn btn-primary">Edit</a>
    <a asp-action="KntIndex" class="btn btn-outline-secondary">Back to List</a>
</div>
