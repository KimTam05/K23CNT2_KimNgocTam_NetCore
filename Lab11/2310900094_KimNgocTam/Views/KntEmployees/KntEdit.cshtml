@model _2310900094_KimNgocTam.Models.KntEmployee

@{
    ViewData["Title"] = "Edit";
}

<h4>Change the infomation of @Html.DisplayFor(Model => Model.KntEmpName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="KntEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KntEmpId" />
            <div class="form-group">
                <label>Name: </label>
                <input asp-for="KntEmpName" class="form-control" />
                <span asp-validation-for="KntEmpName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Level: </label>
                <input asp-for="KntEmpLevel" class="form-control" />
                <span asp-validation-for="KntEmpLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Start Date: </label>
                <input asp-for="KntEmpStartDate" class="form-control" />
                <span asp-validation-for="KntEmpStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>
                    Status
                </label>
                <select asp-for="KntEmpStatus" name="KntEmpStatus" class="form-select">
                    <option value="true" >Show</option>
                    <option value="false">Hide</option>
                </select>
                <span asp-validation-for="KntEmpStatus" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="KntIndex" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
